<!--  url: '#' because you want to create a comment inside the same form-->
<!--  if you pass create action path then it will open in a new form - default-->
<% unless current_user.is_a? GuestUser %>
  <%= form_for (@comment), url: '#' do |f| %>

    <div class="form-group">
      <br>
      <%= f.label :content %>
      <%= f.text_area :content, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.submit 'Add Comment', class: 'btn btn-primary' %>
    </div>

  <%end %>
<% end %>