<% if flash[:alert] %>
  <%= js add_gritter(flash[:alert], :title => "Pay attention!", :sticky => false) %>
<% elsif flash[:error] %>
  <%= js add_gritter(flash[:error], :title => "Errors!", :sticky => false) %>
<%elsif flash[:notice] %>
  <%= js add_gritter(flash[:notice], :title => "Awesome!", :sticky => false) %>
<% end %>