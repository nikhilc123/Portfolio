<%= form_for portfolio_item do |f| %>
  <% if portfolio_item.errors.any? %>
    <div id="error_explanation">
      <% portfolio_item.errors.full_messages.each do |error| %>
        <%= alert_generator error %>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-6">

      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :subtitle %>
        <%= f.text_field :subtitle, class: 'form-control' %>
      </div>

      <div class="form-group">
        <label class="btn btn-primary">
          Upload a thumb image <%= f.file_field :thumb_image, style:"display:none;" %>
        </label>
      </div>

      <div class="form-group">
        <label class="btn btn-primary">
          Upload a main image <%= f.file_field :main_image, style:"display:none;"%>
        </label>
      </div>

    </div>

    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :body %>
        <%= f.text_area :body, rows: 5, class: 'form-control' %>
      </div>
    </div>


    <div class="col-md-12">
      <hr>
      <h2>Technologies used</h2>
      <div>
        <%= f.fields_for :technologies do |technology_form| %>
        <!-- f here is cocoon gem defaults-->
          <%= render 'technology_fields', f: technology_form %>
        <% end %>

        <!-- fhere is main form-->
        <%= link_to_add_association 'Add Technology', f, :technologies %>
      </div>

      <div class="form-group">
        <%= f.submit "Submit", class: 'btn btn-primary btn-block' %>
      </div>

    </div>
  </div>
<% end %>
