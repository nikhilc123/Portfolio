<div class="container portfolio-container">
  <div class="row">
    <div class="col-md-7">
      <%= image_tag portfolio_img(@portfolio_item.main_image, "main"), width: '100%' %>
    </div>

    <div class="col-md-5">
      <h1><%= @portfolio_item.title %></h1><hr>
      <p><%= @portfolio_item.subtitle %></p>
      <p><%= @portfolio_item.body %></p>
      <hr>
      <h2>Technologies used: </h2>
      <% @portfolio_item.technologies.each do |technology| %>
        <p><%= technology.name  %></p>
      <% end %>

      <div class="">
        <%= link_to "Edit", edit_portvolio_path(@portfolio_item), class: 'btn btn-warning' %>
      </div>
    </div>
  </div>
</div>



