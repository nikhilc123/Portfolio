<div class="col-sm-8 blog-main"><p>
  <strong>Title:</strong>
  <%= @blog.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @blog.body %>
</p>

<%= link_to 'Edit', edit_blog_path(@blog), class: 'btn btn-primary' if logged_in?(:site_admin) %>
<%= link_to 'Back', blogs_path, class: 'btn btn-primary' if logged_in?(:site_admin) %>

<%= render 'comments/comment_form' %>

<%= render @blog.comments %>

</div>